import React from 'react';
import { Mic } from 'lucide-react';

const VoiceOrbToggle = ({ onClick, active }) => {
  return (
    <button
      onClick={onClick}
      title="Toggle Voice Mode"
      className={`fixed bottom-6 right-6 z-50 p-4 rounded-full shadow-lg transition-colors duration-300
        ${active ? 'bg-purple-600 text-white' : 'bg-gray-800 text-gray-200 hover:bg-gray-700'}`}
    >
      <Mic size={24} />
    </button>
  );
};

export default VoiceOrbToggle;